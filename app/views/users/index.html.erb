<h1> Users </h1>
<table>
	<tr>
		<th> # </th>
		<th> Name </th>
		<th> Email </th>
	</tr>

	<% @user.each do | user | %>
		<tr>
			<td><%= user.id %></td>
			<td><%= user.name %></td>
			<td><%= user.email %></td>
			<td><%= link_to'Edit', edit_user_path(user) %></td>
			<td><%= link_to'Remove', user_path(user), method: :delete %></td>
		</tr>
	<% end %>
</table>

<%= link_to'Add', new_user_path %>
