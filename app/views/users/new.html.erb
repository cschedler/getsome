<h1>New User</h1>

<%= form_with scope: :user, url: signup_path, local: true do | form| %>
	<p>
		<%= form.label :name %>
		<%= form.text_field :name %>
	</p>
	<p>
		<%= form.label :email %>
		<%= form.text_field :email %>
	</p>
	<p>
		<%= form.label :password %>
		<%= form.password_field :password %>
	</p>
	<p>
		<%= form.label :password_confirmation%>
		<%= form.password_field :password_confirmation %>
	</p>
	<p>
		<%= form.submit %>
	</p>
<% end %>
