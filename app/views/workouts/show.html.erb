<p>
	<strong>Date:</strong>
	<%= @workout.wrkt_date %><br>
	<%= "Title:" %>
	<%= @workout.title %>
</p>

<h1>Movements</h1>
<% @workout.movements.each do |movement| %>
	<p>
		<%= movement.movement %>
		<%= movement.set if movement.rep.present?%>
		<%= "x" if movement.rep.present? %>
		<%= movement.rep %>
		<%= movement.weight %>
		<%= "lbs" if movement.weight.present? %>
		<%= movement.duration %>
		<%= link_to 'Edit', edit_user_workout_movement_path(@user, @workout, movement) %>
		<%= link_to 'Remove', user_workout_movement_path(@user, @workout, movement), method: :delete if movement.id.present? %>
	</p>

<% end %>

<%= form_for([ @user, @workout, @workout.movements.build ]) do |form| %>
	<p>
		<%= form.label :movement %>
		<%= form.label :set %>
		<%= form.label :rep %>
		<%= form.label :weight %>
		<%= form.label :duration %>
	</p>

	<p>
		<%= form.text_field :movement %>
		<%= form.text_field :set %>
		<%= form.text_field :rep %>
		<%= form.text_field :weight %>
		<%= form.text_field :duration %>
	</p>

	<p>
	<%= form.submit %>
	</p>

<% end %>
